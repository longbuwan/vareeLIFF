  <script>
    window.onload = async function () {
      await liff.init({ liffId: "2007611527-z7ZNLXOk" });
      if (liff.isLoggedIn()) {
        const profile = await liff.getProfile();
        document.getElementById("name").innerText = profile.displayName;
        document.getElementById("picture").src = profile.pictureUrl;
      } else {
        liff.login();
      }
    };

    function navigateTo(page) {
      // Add a subtle click animation
      event.currentTarget.style.transform = 'scale(0.95)';
      setTimeout(() => {
        switch(page) {
          case 'pre-exam':
            window.location.href = 'https://vrthefuture.varee.ac.th/vrthefuture_pre-exam.html';
            break;
          case 'tcas-round2':
            window.location.href = 'https://vrthefuture.varee.ac.th/vrthefuture_round2.html';
            break;
          case 'tcas-round3':
            window.location.href = 'https://vrthefuture.varee.ac.th/vrthefuture_round3.html';
            break;
        }
      }, 150);
    }
  </script>
